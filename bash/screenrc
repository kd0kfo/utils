shell -$SHELL
term screen
defutf8 on
defflow off
vbell off
autodetach on
startup_message off
defscrollback 5000
hardstatus alwayslastline 
hardstatus string '%{= wk}%-Lw%{= kW}[%50>%n%f* %t]%{= wk}%+Lw%< %{= wk}%-=%M %d %c %H%{-}  '
caption string '%{= wk}%t'
defutf8 on
defbce "on"

# delete unsafe bindings
bind s
bind q
bind L

screen -t bash 0
